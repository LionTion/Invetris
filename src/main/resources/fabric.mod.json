  ],
  "contact": {
    "homepage": "https://www.youtube.com/@RealLionTion",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/invetris/icon.png",

